APP_NAME = (( gitea_app_name ))
RUN_USER = gitea
RUN_MODE = prod

[server]
HTTP_ADDR = (( gitea_http_addr ))
DOMAIN = (( gitea_public_domain ))
SSH_DOMAIN = (( gitea_public_domain ))
ROOT_URL = https://(( gitea_public_domain ))
DISABLE_SSH = false
SSH_PORT = 22
LFS_START_SERVICE = true
LFS_CONTENT_PATH = (( gitea_data_dir ))/lfs
LFS_JWT_SECRET = (( gitea_lfs_secret ))
OFFLINE_MODE = false

[database]
DB_TYPE = postgres
HOST = (( gitea_postgres_host ))
NAME = (( gitea_postgres_db ))
USER = (( gitea_postgres_user ))
PASSWD = (( gitea_postgres_passwd ))
SSL_MODE = disable
CHARSET = utf8
LOG_SQL = false

[security]
INTERNAL_TOKEN = (( gitea_security_token ))
INSTALL_LOCK = true
SECRET_KEY = (( gitea_secret_key ))
PASSWORD_HASH_ALGO = pbkdf2

[repository]
ROOT = (( gitea_data_dir ))/repos
DEFAULT_BRANCH = main

[mailer]
ENABLED = false

[service]
DISABLE_REGISTRATION = true
NO_REPLY_ADDRESS = noreply.(( gitea_public_domain ))
REGISTER_EMAIL_CONFIRM            = false
ENABLE_NOTIFY_MAIL                = false
ALLOW_ONLY_EXTERNAL_REGISTRATION  = false
ENABLE_CAPTCHA                    = false
REQUIRE_SIGNIN_VIEW               = false
DEFAULT_KEEP_EMAIL_PRIVATE        = false
DEFAULT_ALLOW_CREATE_ORGANIZATION = true
DEFAULT_ENABLE_TIMETRACKING       = true

[picture]
DISABLE_GRAVATAR = false
ENABLE_FEDERATED_AVATAR = true
AVATAR_UPLOAD_PATH = (( gitea_data_dir ))/avatars
REPOSITORY_AVATAR_UPLOAD_PATH = (( gitea_data_dir ))/repo-avatars

[openid]
ENABLE_OPENID_SIGNIN = false
ENABLE_OPENID_SIGNUP = true

[session]
PROVIDER = db
PROVIDER_CONFIG =

[log]
MODE = console
LEVEL = info
ROOT_PATH = /var/log/gitea
ROUTER = console

[attachment]
PATH = (( gitea_data_dir ))/attachments

[storage.repo-archive]
PATH = (( gitea_data_dir ))/repo-archive
